#include <AFMotor.h>

#define lefts A0 
#define rights A5 

AF_DCMotor motor2(4, MOTOR12_8KHZ); //change 1 to 2
AF_DCMotor motor1(3, MOTOR12_8KHZ); //change 1 to 2


void setup() {
// motor1.setSpeed(250);
// motor2.setSpeed(250);
  pinMode(lefts,INPUT);
  pinMode(rights,INPUT);

  Serial.begin(9600);

}

void loop(){
  Serial.println(analogRead(lefts));
  Serial.println(analogRead(rights));
  if(analogRead(lefts)<=400 && analogRead(rights)<=400){
    motor1.setSpeed(200); //~140 min - 255
    motor2.setSpeed(200); //~140 min - 255
    motor1.run(FORWARD);
    motor2.run(FORWARD);
  }
  else if(analogRead(lefts)<=400 && !analogRead(rights)<=400){
    motor1.setSpeed(150);
    motor2.setSpeed(150);
    motor1.run(FORWARD);
    motor2.run(BACKWARD);
  }
  else if(!analogRead(lefts)<=400 && analogRead(rights)<=400)
    motor1.setSpeed(150);
    motor2.setSpeed(150);
    motor1.run(BACKWARD);
    motor2.run(FORWARD);
  }
  else if(!analogRead(lefts)<=400 && !analogRead(rights)<=400){
    motor1.run(RELEASE);
    motor2.run(RELEASE);
  }

}
